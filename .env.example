# GCP
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=europe-west1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# APIs
FAKE_STORE_API_URL=https://fakestoreapi.com
API_REQUEST_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# Storage
GCS_RAW_BUCKET=data-platform-raw

# BigQuery
BQ_RAW_DATASET=bq_raw
BQ_ANALYTICS_DATASET=bq_analytics

# Pub/Sub
PUBSUB_TOPIC_CARTS=carts-events
PUBSUB_SUBSCRIPTION_CARTS=carts-events-sub

# Ingestion
CARTS_POLL_INTERVAL_SECONDS=60
CARTS_LOOKBACK_MINUTES=5
BATCH_SCHEDULE_HOUR=2  # Run at 2 AM daily

# Runtime
ENV=local
LOG_LEVEL=INFO
